    "test": "jest",
    "build": "prisma generate && prisma migrate deploy && rimraf dist && tsc",
    "lint": "eslint",
    "dev": "nodemon"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.17.10",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.1.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@grammyjs/menu": "^1.3.0",
    "@grammyjs/runner": "^2.0.3",
    "@grammyjs/transformer-throttler": "^1.2.1",
    "@prisma/client": "^6.1.0",
    "dotenv": "^16.4.7",
    "grammy": "^1.33.0",
    "luxon": "3.5.0",
    "pm2": "^5.4.3",
