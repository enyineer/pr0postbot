{
  "name": "pr0postbot",
  "version": "2.0.0",
  "description": "A bot that scrapes pr0gramm.com and sends the newest post to groups",
  "main": "dist/index.js",
  "author": "enyineer",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
